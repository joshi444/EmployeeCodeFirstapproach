@model EmployeeEFCoreCodeFirstApp.Models.Employee
<h2>Edit Employee details</h2>
<form asp-action="Edit" asp-controller="Employee" method="Post">
    <div class="form-group">
        <label asp-for="EmployeeId" class="form-control col-sm-2">Id</label>
        <input asp-for="EmployeeId" class="form-control col-sm-10" readonly="true"/>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="form-control col-sm-2">Name</label>
        <input asp-for="Name" class="form-control col-sm-10" />
    </div>

    <div class="form-group">
        <label asp-for="DepartmentName" class="form-control col-sm-2">
           Department
            </label>
        <input asp-for="DepartmentName" class="form-control col-sm-10"/>
    </div>

  

    <div class="form-group">
        <label asp-for="Address" class="form-control col-sm-2">
            Address
            </label>
        <input asp-for="Address" class="form-control col-sm-10"/>
    </div>

    <div class="form-group">
        <label asp-for="Contact" class="form-control col-sm-2">
           Contact
            </label>
        <input asp-for="Contact" class="form-control col-sm-10"/>
    </div>

    <div>
        <button type="submit" class="btn btn-success">Update</button>
    </div>

</form>

