@model IEnumerable<EmployeeEFCoreCodeFirstApp.Models.Employee>
<h2>Employee List</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>EmployeeId</th>
            <th>EmployeeName</th>
            <th>DepartmentName</th>
            <th>Age</th>
            <th>Address</th>
            <th>Contact</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
                <tr>
                    <td>@emp.EmployeeId</td>
                    <td>@emp.Name</td>
                    <td>@emp.DepartmentName</td>
                    <td>@emp.Address</td>
                    <td>@emp.Contact</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Employee"
                    asp-route-id="@emp.EmployeeId">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Employee"
                    asp-route-id="@emp.EmployeeId">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>